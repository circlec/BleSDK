<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_expend_char_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Characteristic Name" />

    <TextView
        android:id="@+id/tv_expend_char_uuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Characteristic UUID" />

    <TextView
        android:id="@+id/tv_expend_char_properties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Characteristic Properties" />

</LinearLayout>